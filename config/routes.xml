<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--
    Add routes in config/routes.yaml

    flexphp_invoice_bundle_routes:
        resource: "@FlexPHPInvoiceBundle/config/routes.xml"
        prefix: /
    -->

    <route id="flexphp.invoice.bills.index" controller="flexphp.invoice.bundle.bill_controller::index" path="/bills" methods="GET,POST" />
    <route id="flexphp.invoice.bills.new" controller="flexphp.invoice.bundle.bill_controller::new" path="/bills/new" methods="GET" />
    <route id="flexphp.invoice.bills.create" controller="flexphp.invoice.bundle.bill_controller::create" path="/bills/create" methods="POST" />
    <route id="flexphp.invoice.bills.read" controller="flexphp.invoice.bundle.bill_controller::read" path="/bills/{id}" methods="GET" />
    <route id="flexphp.invoice.bills.edit" controller="flexphp.invoice.bundle.bill_controller::edit" path="/bills/edit/{id}" methods="GET" />
    <route id="flexphp.invoice.bills.update" controller="flexphp.invoice.bundle.bill_controller::update" path="/bills/update/{id}" methods="PUT" />
    <route id="flexphp.invoice.bills.delete" controller="flexphp.invoice.bundle.bill_controller::delete" path="/bills/delete/{id}" methods="DELETE" />
    <route id="flexphp.invoice.bills.export" controller="flexphp.invoice.bundle.bill_controller::export" path="/bills/export/xlsx" methods="GET,POST" />
    <route id="flexphp.invoice.bills.find.orders" controller="flexphp.invoice.bundle.bill_controller::findOrder" path="/bills/find-orders" methods="POST" />
    <route id="flexphp.invoice.bills.find.providers" controller="flexphp.invoice.bundle.bill_controller::findProvider" path="/bills/find-providers" methods="POST" />
    <route id="flexphp.invoice.bills.find.bill-status" controller="flexphp.invoice.bundle.bill_controller::findBillStatus" path="/bills/find-bill-status" methods="POST" />
    <route id="flexphp.invoice.bills.find.bill-types" controller="flexphp.invoice.bundle.bill_controller::findBillType" path="/bills/find-bill-types" methods="POST" />
    <route id="flexphp.invoice.bills.find.bills" controller="flexphp.invoice.bundle.bill_controller::findBill" path="/bills/find-bills" methods="POST" />
</routes>


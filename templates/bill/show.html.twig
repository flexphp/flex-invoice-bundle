{% trans_default_domain 'bill' %}
{% extends 'form/layout.html.twig' %}

{% block title %}{% trans %}title.show{% endtrans %}{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">
                {% trans %}entity{% endtrans %}: {{ bill.id }}
            </h3>
            <div class="toolbar ml-auto">
                <a href="{{ path('flexphp.invoice.bills.index') }}" class="btn btn-outline-secondary">
                    <i class="fa fa-list-ol" aria-hidden="true"></i>
                    <span class="btn-text">{% trans from 'messages' %}action.list{% endtrans %}</span>
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="form-group"><label>{% trans %}label.number{% endtrans %}</label><div class="form-control-plaintext">{{ bill.number }}</div></div>
            <div class="form-group"><label>{% trans %}label.orderId{% endtrans %}</label><div class="form-control-plaintext">{{ bill.orderIdInstance.id|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.provider{% endtrans %}</label><div class="form-control-plaintext">{{ bill.providerInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.status{% endtrans %}</label><div class="form-control-plaintext">{{ bill.statusInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.type{% endtrans %}</label><div class="form-control-plaintext">{{ bill.typeInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.message{% endtrans %}</label><div class="form-control-plaintext">{{ bill.message }}</div></div>
            <div class="form-group"><label>{% trans %}label.createdAt{% endtrans %}</label><div class="form-control-plaintext">{{ bill.createdAt ? bill.createdAt|date('Y-m-d H:i:s') : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.updatedAt{% endtrans %}</label><div class="form-control-plaintext">{{ bill.updatedAt ? bill.updatedAt|date('Y-m-d H:i:s') : '-' }}</div></div>
            <div class="form-group"><label>{% trans %}label.createdBy{% endtrans %}</label><div class="form-control-plaintext">{{ bill.createdByInstance.name|default('-') }}</div></div>
            <div class="form-group"><label>{% trans %}label.updatedBy{% endtrans %}</label><div class="form-control-plaintext">{{ bill.updatedByInstance.name|default('-') }}</div></div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    {# {{ include('@FlexPHPInvoice/bill/_delete_form.html.twig', {bill: bill}, with_context = false) }} #}
                </div>

                <div class="col text-right">
                    {# <a href="{{ path('flexphp.invoice.bills.edit', {id: bill.id}) }}" class="btn btn-outline-primary"> #}
                        {# <i class="fa fa-edit" aria-hidden="true"></i> #}
                        {# <span class="btn-text">{% trans from 'messages' %}action.edit{% endtrans %}</span> #}
                    {# </a> #}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
